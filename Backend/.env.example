# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/mlaf?retryWrites=true&w=majority

# Server Port (optional, defaults to 4000 locally, Render uses PORT env var)
PORT=4000

# JWT Secret (use a long random string - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_here_use_a_long_random_string

# Initial Admin Account (created automatically on first startup)
ADMIN_USER=admin
ADMIN_PASS=your_secure_password_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
